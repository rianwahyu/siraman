<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#ECECEC">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/shimmer1"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/placeholder_home"/>
            </RelativeLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.75"
            android:id="@+id/frameMain"
            android:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/titleMenuCuciMobil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu Cuci Mobil"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/lato_bold"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/recycleItem"
                    app:layout_constraintTop_toBottomOf="@id/titleMenuCuciMobil"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="5dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.75"
            android:id="@+id/frameNumPad"
            android:visibility="gone">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:srcCompat="@drawable/ic_cancel"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:id="@+id/imgCloseNumPad"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <ScrollView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp">

                            <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="7"
                                android:id="@+id/t7"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                android:backgroundTint="@color/md_blue_A200"
                                />
                            <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="8"
                                android:id="@+id/t8"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                android:backgroundTint="@color/md_blue_A200"
                                android:layout_marginLeft="4dp"/>
                            <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="9"
                                android:id="@+id/t9"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                android:backgroundTint="@color/md_blue_A200"
                                android:layout_marginLeft="4dp"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp">

                            <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="4"
                                android:id="@+id/t4"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                android:backgroundTint="@color/md_blue_A200"
                                android:layout_marginTop="4dp"/>
                            <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="5"
                                android:id="@+id/t5"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                android:backgroundTint="@color/md_blue_A200"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"/>
                            <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="6"
                                android:id="@+id/t6"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                android:backgroundTint="@color/md_blue_A200"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp">

                            <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="1"
                                android:id="@+id/t1"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                android:backgroundTint="@color/md_blue_A200"
                                android:layout_marginTop="4dp"/>
                            <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="2"
                                android:id="@+id/t2"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                android:backgroundTint="@color/md_blue_A200"
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="4dp"/>
                            <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="3"
                                android:id="@+id/t3"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                android:backgroundTint="@color/md_blue_A200"
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp">

                            <Button
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="0"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                android:id="@+id/t0"
                                android:layout_marginTop="4dp"
                                android:backgroundTint="@color/md_blue_A200"/>

                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:id="@+id/tDel"
                                android:backgroundTint="@color/md_blue_A200"
                                android:src="@drawable/ic_back"
                                android:tintMode="multiply"
                                app:tint="@color/white" />

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorTextGrey"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/relaCart">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daftar Keranjang"
                    android:layout_margin="10dp"
                    android:id="@+id/textTotalCart"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/lato_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/linearCart"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.8"
                            android:id="@+id/textNameItem"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold"
                            android:text="Nama Item"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/textQty"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:gravity="end"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold"
                            android:text="Jumlah"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:id="@+id/textPriceItem"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:gravity="end"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold"
                            android:text="Harga Satuan"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:id="@+id/recycleCart">

                </androidx.recyclerview.widget.RecyclerView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:text="Hapus keranjang"
                    android:backgroundTint="@color/red"
                    android:fontFamily="@font/lato_bold"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_8ssp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginBottom="@dimen/_5sdp">

                    <LinearLayout
                        android:id="@+id/linearTotal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/linearTop"
                            android:padding="@dimen/_2sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:text="Total Harga"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/lato_regular"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:textColor="@color/black"
                                android:id="@+id/textSumTotal"
                                android:layout_marginRight="5dp"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textAlignment="textEnd"
                                tools:ignore="RtlCompat"
                                android:fontFamily="@font/lato_regular"
                                android:text="123"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/linearMidle"
                            app:layout_constraintTop_toBottomOf="@id/linearTop"
                            android:padding="@dimen/_2sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:text="Dibayarkan"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/lato_regular"/>

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:inputType="numberDecimal"
                                android:digits="1234567890"
                                android:id="@+id/et_paid"
                                android:textColor="@color/black"
                                android:layout_marginRight="5dp"
                                android:textSize="@dimen/_11ssp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textAlignment="textEnd"
                                tools:ignore="RtlCompat"
                                />

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:inputType="numberDecimal"
                                android:digits="1234567890"
                                android:id="@+id/et_paid2"
                                android:textColor="@color/black"
                                android:layout_marginRight="5dp"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textAlignment="textEnd"
                                tools:ignore="RtlCompat"
                                android:visibility="gone"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_2sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:text="Total Kembalian"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/_11ssp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/lato_regular"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:textColor="@color/black"
                                android:id="@+id/textReturn"
                                android:layout_marginRight="5dp"
                                android:textSize="@dimen/_11ssp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textAlignment="textEnd"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSave"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:backgroundTint="@color/blue"
                            android:text="Proses Pembayaran"
                            android:textSize="@dimen/_12ssp"
                            android:textAllCaps="false"
                            android:fontFamily="@font/lato_bold"
                            android:layout_margin="@dimen/_3sdp"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</layout>
